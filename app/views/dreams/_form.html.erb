<%= form_with(model: dream, class: "p-4 p-md-5 border rounded-3 bg-light") do |form| %>
  <% if dream.errors.any? %>
    <div style="color: red">
      <h4><%= pluralize(dream.errors.count, "error") %> prohibited this dream from being saved:</h4>
      <ul>
        <% dream.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-floating mb-3">
    <%= form.text_area(:description, placeholder: "My dream is X but Y...", class: "form-control", style: "height: 100px", autofocus: true) %>
    <%= form.label :description %>
  </div>
  <div class="form-floating mb-3">
    <%= form.email_field :email, placeholder: "name@example.com", class: "form-control" %>
    <%= form.label :email %>
  </div>

  <%= form.submit(class: "w-100 btn btn-lg btn-primary") %>
  <hr class="my-4">
  <small class="text-muted">By clicking Create Dream, you agree to the terms of use.</small>
<% end %>
